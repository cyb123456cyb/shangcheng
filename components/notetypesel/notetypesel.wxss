.comm-notetypesel .layer-sel .typesel {
    padding: 0 40rpx;
}

.comm-notetypesel .layer-sel .typesel .item {
    height: 160rpx;
    border-bottom: 1rpx solid #E5E5E5;
    position: relative;
    text-align: left;
    border: 0;
    padding: 0;
}

.comm-notetypesel .layer-sel .typesel .item .iicon {
    position: absolute;
    top: 54rpx;
    left: 64rpx;
    width: 91rpx;
    height: 53rpx;
}

.comm-notetypesel .layer-sel .typesel .item .iname {
    padding: 36rpx 0 0 225rpx;
    font-size: 32rpx;
    line-height: 45rpx;
}

.comm-notetypesel .layer-sel .typesel .item .itips {
    padding: 10rpx 0 0 225rpx;
    font-size: 24rpx;
    line-height: 33rpx;
    color: #666;
}

.comm-notetypesel .layer-sel .typesel .item.photo .iicon {
    background: url("http://m.jiazhangbiji.cn/images/wxapp/photo@3x.png") 0 0 no-repeat;
    background-size: 91rpx 53rpx;
}

.comm-notetypesel .layer-sel .typesel .item.video .iicon {
    background: url("http://m.jiazhangbiji.cn/images/wxapp/video@3x.png") 0 0 no-repeat;
    background-size: 91rpx 53rpx;
}

.comm-notetypesel .layer-sel .btncancel {
    height: 120rpx;
    font-size: 32rpx;
    line-height: 120rpx;
    color: #ccc;
    text-align: center;
}

.comm-notetypesel.show {
    display: block;
}

.comm-notetypesel.show .layer-sel {
    display: block;
    animation: larger .3s;
