.comm-notetypesel {
    position: fixed;
    z-index: 200;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.7);
    display: none;
}

.comm-notetypesel .layer-sel {
    position: fixed;
    z-index: 201;
    top: 300rpx;
    left: 50%;
    margin-left: -280rpx;
    width: 560rpx;
    background-color: #fff;
    border-radius: 24rpx;
    box-shadow: 0px 2px 24px 0px rgba(0,0,0,0.2);
