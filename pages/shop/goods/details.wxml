<scroll-view scroll-x class=" nav text-center" style="background-image:linear-gradient(45deg, #ff9700, #ed1c24);color:white">
  <view class="cu-item {{index==currtab?'text-white cur':''}}" wx:for="{{nav}}" wx:key bindtap="tabSelect" data-id="{{index}}">
    {{item}}
  </view>
</scroll-view>

<swiper current="{{currtab}}" class="swiper-box" duration="300" style="height:{{deviceH-31}}px" bindchange="tabChange">
  <swiper-item>
<scroll-view scroll-y="true" style="height: {{deviceH-80}}px">
<swiper class="screen-swiper square-dot bg-white" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
    <swiper-item wx:for="{{swiperlist}}" wx:key="index">
        <image src="{{item}}" mode='aspectFill'></image>
    </swiper-item>
</swiper>
<!--商品价格-->
<view class="bg-white canui-goods-box" style="padding-top:30rpx;">
    <text class="text-price text-red text-xl">{{item_price}}</text>
</view>
<!--商品名称-->
<view class="bg-white canui-goods-box canui-xzwz text-black">{{item_name}}</view>
<!--商品属性-->
<view class="bg-white grid col-3 canui-goods-box text-gray text-sm">
    <view class='padding-sm'>课程剩余:{{item_count}}件</view>
    <view class='padding-sm text-center text-red text-bold'>热门课程！欢迎预定</view>
    <view class='padding-sm text-right text-gray'>让我们一起进步！</view>
</view>
<!--商品详情-->
<view class="cu-bar bg-white margin-top solid-bottom">
    <view class='action'>
        <text class='icon-title text-red'></text>
        <text class="text-shadow text-orange">课程位置:       </text>
        <text>{{course_place}}</text>
        <text style="margin-left:120rpx">(请就近选取上课地点哦！)</text>
    </view>

</view>
<view class="cu-bar bg-white solid-bottom">
    <view class='action'>
        <text class='icon-title text-red'></text>
        <text class="text-shadow text-orange">授课讲师:       </text>
        <text class="text-gray">{{course_teacher}}</text>
       
        <text style="margin-left:120rpx"> <text class="cuIcon-{{'comment'}} lg text-red"></text> (与杰老师做朋友！！！)</text>
    </view>

</view>
