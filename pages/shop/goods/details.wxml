    <view class='action'>
        <text class='icon-title text-red'></text>
        <text class="text-shadow text-orange">课程详情:       </text>
    </view>

</view> -->
  <view class="cu-bar  bg-white">
    <view class="action sub-title">
      <text class="text-xl text-bold text-orange">课程详情：</text>
      <text class="bg-red" style="width:2rem">课程详情</text>
      <!-- last-child选择器-->
    </view>
  </view>

<view class="bg-white padding cauni-details-box">
        <view wx:for="{{course_detail}}" wx:key="index">
        <image src="{{item}}" mode='aspectFill'></image>
    </view>
</view>
</scroll-view>
  </swiper-item>
  <swiper-item>
          <view wx:for="{{teachers_detail}}" wx:key="index">
        <image src="{{item}}" mode='aspectFill'></image>
    </view>
  </swiper-item>
    <swiper-item>
    <scroll-view scroll-y="true" style="height: {{deviceH-80}}px">
     <block wx:for="{{comment}}" style="margin:0;padding:0">

            <view class="cu-list menu-avatar comment solids-top"  style="margin:0;padding:0">
      <view class="cu-item ">
        <view class="cu-avatar round" style="background-image:url({{item.user_touxiang}});"></view>
        <view class="content">
          <view class="text-grey">{{item.user_name}}</view>
          <view class="text-gray text-content text-df">
            {{item.comment_detail}}
          </view>
          <view class="margin-top-sm flex justify-between">
            <view class="text-gray text-df">{{item.course_time}}</view>
            <view>
              <text class="cuIcon-appreciatefill text-red"></text>
              <text class="cuIcon-messagefill text-gray margin-left-sm"></text>
            </view>
          </view>
        </view>
     
      </view>
</view>
</block>
</scroll-view>
  </swiper-item>
</swiper>

