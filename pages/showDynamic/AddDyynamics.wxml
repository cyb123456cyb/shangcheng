</view>


  <view class='content'>
    <view class='left'>
      内容
    </view>
    <view class='right' >
      <text bindtap='label' class="{{status[index]==1? 'labelColor':''}}" data-index="{{index}} "wx:for="{{additional}}" id="{{index}}">{{item}}</text>

    </view>
  </view>

            </form>
             <view class="notetitle">
                <input maxlength="40" name="title" placeholder="填写标题，让笔记更明确" placeholderClass="hover" type="text" value="测试标题"></input>
                <view class="tips">20字</view>
            </view>

            <!-- 添加图片文字区域 -->
            <view class="notepiccontent" wx:if="{{note_type=='1'}}">
               
                <view class="item" wx:for="{{res}}">
                    <view class="pictext">
                        <view class="notepic">
                            <image mode="widthFix" src="{{item[0]}}"></image>
                            <view class="noteactions">
                               
                            </view>
                        </view>
                        <view class="notetext">
                            <textarea autoHeight bindinput="onPicContentInput" data-index="{{index}}" maxlength="5000" placeholder="有图有真相，有字有细节！多写点哦…" placeholderClass="hover" value="{{item[1]}}"></textarea>
                         
                        </view>
                    </view>
                </view>
    <view class="bottombar">
        <view class="barbody">
            <view bindtap="toViewComments" class="cmtcount">{{note_info.note.comment_count}}</view>
            <view bindtap="likeNote" class="likecount {{state==1?'liked':''}}">
                {{note_likes}}
            </view>
            <button plain bindtap="showSharePic" class="btnsharepic">发朋友圈</button>
            <button plain class="btnshare" data-type="btm" openType="share">发微信</button>
        </view>
    </view>
  <view class="cmtcreate">
        <image lazyLoad class="uface" src="{{logined_user_info.user.pic_r300}}"></image>
        <input   class="cmtinput" placeholder="说点什么..." bindinput="changeInput"></input> 
       <button plain class="cmtfriend" data-type="cmt" id="__cmtfriend" bindtap="addNoteCmt">
            提交
        </button>
        <view class="guidetips {{guide_cmt_show?'show':''}}">
            <image lazyLoad mode="widthFix" src="{{global_configs.img_url_prefix}}wxapp/tips-pics/tip11.png"></image>
        </view>
    </view>
     <view class="cmtempty" wx:if="{{comment_list.length==0}}">
        <view class="emptytips">笔记暂无评论，快来抢沙发吧~</view>
    </view>
 <view class="cmtitem" wx:for="{{comment_list}}" wx:key="id">
            <view bindtap="bindNoteCmtAction" data-cmt_id="{{item.id}}" data-parent_cmt_id="{{item.id}}" data-parent_reply_id="" data-user_id="{{item.user_id}}">
                <!-- <view catchtap="gotoUserHome" class="uface" data-user_id="{{item.user_id}}"> -->
                  
                <!-- </view> -->
              <view class="uface-box">
                            <image lazyLoad class="facepic"  src="{{item.user_touxiang}}"></image>
                    </view>
                <view class="unick" style="margin-top:15rpx;width:66rpx;text-align:66rpx">
                    {{item.nickname}}
                </view>
                <view class="cmtcontent" >
                    <view class="cmttext">
                        <text>{{item.content}}</text>
                    </view>
                </view>
            </view>
          </view>

            </view>


</scroll-view>
